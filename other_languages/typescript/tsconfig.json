{
    "compilerOptions": {
        "target": "es6", // Specify the ECMAScript target version
        "module": "commonjs", // Specify the module system
        "outDir": "./dist", // Specify the output directory for compiled files
        "strict": true, // Enable strict type checking
        "esModuleInterop": true // Enable interoperability between CommonJS and ES Modules
    },
    "include": [
        "./src" // Specify the directory where your TypeScript source files are located
    ],
    "exclude": [
        "node_modules" // Specify any directories or files to exclude from compilation
    ]
}